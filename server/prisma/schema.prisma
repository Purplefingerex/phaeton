generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String     @id @default(cuid())
  firstName     String     @db.VarChar(50)
  lastName      String     @db.VarChar(50)
  email         String     @unique @db.VarChar(30)
  password      String?    @db.VarChar(255)
  role          Role       @default(USER)
  driverLicence String?    @db.VarChar(50)
  IsGuestUser   Boolean    @default(false)
  DateOfBirth   DateTime?
  Verified      Boolean    @default(false)
  Service       Services[]
}

model Cars {
  id            String       @id @default(cuid())
  model         String       @db.VarChar(255)
  imageUrl      String       @db.VarChar(255)
  seats         Int
  transmission  Transmission
  price         Int
  fuel          Fuel
  power         Int
  trunkCapacity Int
  Service       Services[]
}

model ParkingLot {
  id      String     @id @default(cuid())
  zone    String     @db.VarChar(50)
  Service Services[]
}

model Services {
  id                   String      @id @default(cuid())
  ServiceStartDate     DateTime?
  ServiceEndDate       DateTime?
  ParkingLotID         String?
  userID               String?
  CarID                String?
  ActualServiceEndDate DateTime?
  PhoneNumber          String?
  IsActive             Boolean     @default(true)
  Cars                 Cars?       @relation(fields: [CarID], references: [id])
  ParkingLot           ParkingLot? @relation(fields: [ParkingLotID], references: [id])
  Users                Users?      @relation(fields: [userID], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Transmission {
  A
  M
}

enum Fuel {
  Diesel
  Petrol
  Electric
}
